<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <org.chzz.banner.CHZZBanner
        android:id="@+id/iv_banner"
        style="@style/BannerDefaultStyle"
        android:layout_height="130dp"
        app:banner_transitionEffect="accordion" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin_10">

        <TextView
            android:id="@+id/tv_Information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_item"
            android:drawablePadding="@dimen/common_margin_2"
            android:drawableTop="@mipmap/ico_current_stu"
            android:gravity="center_horizontal"
            android:text="资讯" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/common_margin_2"
            android:drawableTop="@mipmap/ico_current_stu"
            android:gravity="center_horizontal"
            android:text="资讯" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/common_margin_2"
            android:drawableTop="@mipmap/ico_current_stu"
            android:gravity="center_horizontal"
            android:text="资讯" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/common_margin_2"
            android:drawableTop="@mipmap/ico_current_stu"
            android:gravity="center_horizontal"
            android:text="资讯" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_item"
            android:drawablePadding="@dimen/common_margin_2"
            android:drawableTop="@mipmap/ico_current_stu"
            android:gravity="center_horizontal"
            android:text="资讯" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/common_margin_2"
            android:drawableTop="@mipmap/ico_current_stu"
            android:gravity="center_horizontal"
            android:text="资讯" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/common_margin_2"
            android:drawableTop="@mipmap/ico_current_stu"
            android:gravity="center_horizontal"
            android:text="资讯" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/common_margin_2"
            android:drawableTop="@mipmap/ico_current_stu"
            android:gravity="center_horizontal"
            android:text="资讯" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_margin_8"
        android:layout_marginTop="@dimen/common_margin_8"
        android:background="@color/light_gray" />
</LinearLayout>